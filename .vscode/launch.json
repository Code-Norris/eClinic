{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug Go Queue",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/src/microservices/QueueSystem/cmd/main.go",
            "env": {},
            "args": []
        },
        {
            "name": "debug AuthN API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build AuthN",
            "program": "${workspaceFolder}/src/microservices/AuthN/API/bin/Debug/netcoreapp3.1/eClinic.AuthN.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": ".NET Core Attach",
            "preLaunchTask": "Dapr Run PatientRegistration",
            "type": "coreclr",
            "request": "attach",
            "processName": "dapr.exe"
        },
        {
            "name": "debug PatientRegistration API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build PatientRegistration",
            "program": "${workspaceFolder}/src/microservices/PatientRegistration/API/bin/Debug/netcoreapp3.1/eClinic.PatientRegistration.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/microservices/PatientRegistration/API",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "debug PatientRegistration API with Dapr",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "daprd-debug",
            "program": "${workspaceFolder}/src/microservices/PatientRegistration/API/bin/Debug/netcoreapp3.1/eClinic.PatientRegistration.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/microservices/PatientRegistration/API",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "postDebugTask": "daprd-down"
        }
    ]
}